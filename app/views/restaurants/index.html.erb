<!-- %= link_to "Add a restaurant", new_restaurant_path %> -->
<% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
  <p><%= restaurant.address %></p>
  <p><%= restaurant.phone_number %></p>
  <p><%= restaurant.category %></p>
  <%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"} %>
  <%= link_to "Create", new_restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"} %>
  <%= link_to "Modify", edit_restaurant_path(restaurant) %>
<% end %>



